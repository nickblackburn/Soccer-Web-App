<div class="container-fluid">
<div class="jumbotron">
    <h1>Country</h1>
</div>
<h4>Current Countries</h4>
<div class="table-responsive">
<table class="table table-striped">
<thead class="thead-dark">
    <tr>
        <th>Country</th>
	<th>Area</th>
	<th>Population</th>
	<th>Edit</th>
	<th>Delete</th>
    </tr>
</thead>
<tbody>
{{#each allCountryInfo}}
    <tr>
	<td>{{country_name}}</td>
	<td>{{area_name}}</td>
	<td>{{population}}</td>
	<form action="/country/edit/{{country_id}}" method="get" onsubmit="return confirmEdit('{{country_name}}')">
	  <td><input type="submit" value="Edit"></td>
	</form>
	<form action="/country/delete/{{country_id}}" method="get" onsubmit="return confirmDelete()">
	  <td><input type="submit" value="Delete"></td>
	</form>
    </tr>
{{/each}}
</tbody>
</table>
</div>
<br>
<form action="/country" method="post" name="countryForm" onsubmit="return validateCountryForm()">
    <fieldset>
	<legend>Add New Country</legend>
	  <div class="form-row">
	    <div class="form-group col-sm-4">
	      <label for="country_name">Country Name</label>
	      <input class="form-control" type="text" name="country_name" id="country_name">
	    </div>
	    <div class="form-group col-sm-4">
	      <label for="area">Area</label>
	      <select class="form-control" name="area" id="area">
		  {{#each allAreas}}
		    <option value="{{area_id}}">{{area_name}}</option>
		  {{/each}}
	      </select>
	    </div>
	    <div class="form-group col-sm-4">
	      <label for="population">Population</label>
	      <input class="form-control" type="number" name="population" id="population">
	    </div>
	  </div>
	  <div class="form-row">
	    <input class="form-control btn btn-primary" type="submit">
	  </div>
    </fieldset>
</form>
</div>
