<div class="container-fluid">
<div class="jumbotron">
    <h1>Team</h1>
</div>
<h4>Current Teams</h4>
<div class="table-responsive">
<table class="table table-striped">
<thead class="thead-dark">
    <tr>
        <th>Team</th>
	<th>League</th>
	<th>Coach</th>
	<th>Country</th>
	<th>Area</th>
	<th>Edit</th>
	<th>Delete</th>
    </tr>
</thead>
<tbody>
{{#each allTeamInfo}}
    <tr>
	<td>{{team_name}}</td>
	<td>{{league_name}}</td>
	<td>{{coach}}</td>
	<td>{{country_name}}</td>
	<td>{{area_name}}</td>
	<form action="team/edit/{{team_id}}" method="get" onsubmit="return confirmEdit('{{team_name}}')">
	  <td><input type="submit" value="Edit"></td>
	</form>
	<form action="/team/delete/{{team_id}}" method="get" onsubmit="return confirmDelete()">
	  <td><input type="submit" value="Delete"></td>
	</form>
    </tr>
{{/each}}
</tbody>
</table>
</div>
<br>
<form action="/team" method="post" name="teamForm" onsubmit="return validateTeamForm()">
    <fieldset>
	<legend>Add New Team</legend>
	<div class="form-row">
	  <div class="form-group col-sm-6">
	    <label for="team_name">Team Name</label>
	    <input class="form-control" type="text" name="team_name" id="team_name">
	  </div>
	  <div class="form-group col-sm-6">
	    <label for="league">League</label>
	    <select class="form-control" name="league" id="league">
		  {{#each allLeagues}}
		    <option value="{{league_id}}">{{league_name}}</option>
		  {{/each}}
		</select>
	  </div>
	</div>
	<div class="form-row">
	  <div class="form-group col-sm-4">
	    <label for="coach">Coach</label>
	    <input class="form-control" type="text" name="coach" id="coach">
	  </div>
	  <div class="form-group col-sm-4">
	    <label for="country">Country</label>
	    <select class="form-control" name="country" id="country">
		  {{#each allCountries}}
	            <option value="{{country_id}}">{{country_name}}</option>
		  {{/each}}
	      </select><br>
	  </div>
	  <div class="form-group col-sm-4">
	    <label for="area">Area</label>
	    <select class="form-control" name="area" id="area">
		  {{#each allAreas}}
	            <option value="{{area_id}}">{{area_name}}</option>
		  {{/each}}
	      </select>
	  </div>
	</div>
	<div class="form-row">
	  <input class="form-control btn btn-primary" type="submit">
	</div>
    </fieldset>
</form>
</div>
